<div class="toolbar-luckypet sticky-bot col-12">
  <%= link_to feeds_path do %>
    <div class="nav-icon <%= 'nav-active' if controller_name == 'feeds' %>">
      <i class="fa-solid fa-house"></i>
    </div>
  <% end %>
  <% if current_user %>
    <%= link_to spots_path do %>
      <div class="nav-icon <%= 'nav-active' if controller_name == 'spots' %>">
        <i class="fa-solid fa-magnifying-glass"></i>
      </div>
    <% end %>
  <% end %>
  <% if current_user && current_user.dog %>
    <%= link_to dog_path(current_user.dog) do %>
      <div class="nav-icon <%= 'nav-active' if controller_name == 'dogs' %>">
        <i class="fa-solid fa-dog"></i>
      </div>
    <% end %>
  <% end %>
  <% if current_user && current_user.dog %>
    <%= link_to friendships_path(current_user.dog) do %>
      <div class="nav-icon <%= 'nav-active' if controller_name == 'friendships' %>">
        <i class="fa-solid fa-user-group"></i>
      </div>
    <% end %>
  <% end %>
</div>
