<%= link_to walk_path(walk), :"data-aos" => "fade-up", class: "card-spot" do %>
  <div class="card-reservation">
    <div class="card-spot-img">
      <%= cl_image_tag walk.spot.photo.key, crop: :fill, width: 300 %>
    </div>
    <div class="card-spot-info">
      <div>
        <h2><%= walk.spot.name.capitalize %></h2>
        <div class="card-spot-bot">
        <% if walk.invitations.any? %>
        <div><%= walk.invitations.first.status %></div>
        <div><%= walk.invitations.first.dog.name %></div>
        <% end %>
          <p><i class="fa-solid fa-calendar-days p-1"></i> Date de la balade : <%= walk.date.strftime("%d/%m/%Y") %> </p>
        </div>
      </div>
    </div>
  </div>
<% end %>
